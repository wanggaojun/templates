<script type="text/javascript" src="/coupon/common/js/base/jquery-1.3.2.js"></script>
<script type="text/javascript" src="/coupon/common/js/base/jquery.form.js"></script>
<script type="text/javascript" src="/coupon/common/js/base/common.js"></script>
<link rel="stylesheet" type="text/css" href="/coupon/common/js/base/easyui/themes/default/easyui.css">
<link rel="stylesheet" type="text/css" href="/coupon/common/js/base/easyui/themes/icon.css">
<script type="text/javascript" src="/coupon/common/js/base/easyui/jquery.easyui.min.js"></script>

<script type="text/javascript" src="/coupon/common/js/system/user.js"></script>



<body class="easyui-layout" >
<div region="center">
<table id="user_List"></table>
</div>


	<div id="win_user_form_area" style="display:none;">
		<div id="win_user_form" title="My Window" icon="" style="width:300px;height:300px;padding:5px;background: #fafafa;">
				<input id="user_id" type="hidden" value="">
				<div class="easyui-layout" fit="true">
					<div region="center" border="false" style="padding-left:40px;padding-top:20px;background:#fff;border:1px solid #ccc;">
						<form id="user_form" method="post">
					        <div>
					            <label for="user_name">用户名称:</label>
					            <input class="easyui-validatebox" type="text" id="user_form_user_name"  name="user_name" required="true"></input>
					        </div>
					        <br>
					        <div>
					            <label for="password">用户密码:</label>
					            <input class="easyui-validatebox" type="password" id="user_form_password"  name="password" ></input>
					        </div>
					        <br>  
					        <div>
					            <label for="nick_name">用户呢称:</label>
					            <input class="easyui-validatebox" type="text" id="user_form_nick_name"  name="nick_name" required="true"></input>
					        </div>
					        <br>
					        <div>
					            <label for="user_type">用户类型:</label>
					            <input type="radio" id="user_form_user_type"  name="user_type" value="P" checked/>会员(P)
					            <input type="radio"  name="user_type" value="B" />商户(B)
					            <input type="radio"  name="user_type" value="M" />管理员(M)
					        </div>
					        <br>
					        <div>
					            <label for="disabled">是否禁用:</label>
					            <input type="checkbox" id="user_form_disabled" name="disabled"></input>
					        </div>
					        <br>
					        <div>
					            <label for="show_order">显示顺序:</label>
					            <input class="easyui-numberbox" min=0  precision="0" id="user_form_show_order" name="show_order" ></input>
					        </div>
					        <br>
					        <div>
								<label for="roleids">角色列表:</label>
								<input type="hidden" id="user_form_roleids" name="roleids" value="" />
								<div style="margin-left:60px;margin-top:-10px;width:300px;height:80px;overflow-y:auto;border:1px solid gray;">
									<div id="roles_checkboxList"></div>
					        	</div>
					        </div>
					      
					        
					    </form>

					</div>
					<div region="south" border="false" style="text-align:right;height:30px;line-height:30px;">
						<a class="easyui-linkbutton" icon="icon-ok" href="javascript:void(0)" id="user_ok">Ok</a>
						<a class="easyui-linkbutton" icon="icon-cancel" href="javascript:void(0)" id="user_cancel">Cancel</a>
					</div>
				</div>
		</div>
	</div>

<script type="text/javascript">
		//加载JS脚本
		$(document).ready(function(){
			UserManager.init();

		});
</script>
</body>