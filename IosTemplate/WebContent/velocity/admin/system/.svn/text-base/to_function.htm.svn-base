<script type="text/javascript" src="/coupon/common/js/base/jquery-1.3.2.js"></script>
<script type="text/javascript" src="/coupon/common/js/base/jquery.form.js"></script>
<script type="text/javascript" src="/coupon/common/js/base/common.js"></script>
<link rel="stylesheet" type="text/css" href="/coupon/common/js/base/easyui/themes/default/easyui.css">
<link rel="stylesheet" type="text/css" href="/coupon/common/js/base/easyui/themes/icon.css">
<script type="text/javascript" src="/coupon/common/js/base/easyui/jquery.easyui.min.js"></script>

<script type="text/javascript" src="/coupon/common/js/system/function.js"></script>



<body class="easyui-layout" >
<div region="center">
<div>
编码<input id="q_function_code" type="text" value="" size=20/>
名称<input id="q_function_name" type="text" value="" size=20/>
<input type="button" value="查询" onclick="FunctionManager.query()"/>
</div>
	<table id="function_List"></table>
</div>	
	<div id="win_function_form_area" style="display:none;">
		<div id="win_function_form" title="My Window" icon="" style="width:300px;height:300px;padding:5px;background: #fafafa;">
				<input id="function_id" type="hidden" value="">
				<div class="easyui-layout" fit="true">
					<div region="center" border="false" style="padding-left:40px;padding-top:20px;background:#fff;border:1px solid #ccc;">
						<form id="function_form" method="post">
							<div>
					            <label for="parent_id">父级功能:</label>
					            <select id="function_form_parent_id" name="parent_id" style="width:100px;"></select>
					  
					        </div>
					        <br>
					        <div>
					            <label for="function_code">功能代码:</label>
					            <input class="easyui-validatebox" type="text" id="function_form_function_code"  name="function_code" required="true"></input>
					        </div>
					        <br>
					        <div>
					            <label for="function_name">功能名称:</label>
					            <input class="easyui-validatebox" type="text" id="function_form_function_name" name="function_name" required="true"></input>
					        </div>
					        <br>
					        <div>
					            <label for="function_type">功能类型:</label>
								<select class="easyui-combobox" id="function_form_function_type" name="function_type" value="FOLDER" style="width:100px;">
									<option value="FOLDER">文件夹</option>
									<option value="MENU">菜单</option>
									<option value="RESOURCE">操作请求</option>
								</select>
					        </div>
					        <br>
					        <div>
					            <label for="url">资源地址:</label>  
					            <textarea  id="function_form_url"  name="url" style="width:300px;height:60px;"></textarea>
					            <span>webapp下绝对路径URL如/coupon/index.htm 还支持JS方法如 javascript:void(0);</span>
					        </div>
					        <br>
					        <div>
					            <label for="show_order">显示顺序:</label>
					            <input class="easyui-numberbox" min=0  precision="0" id="function_form_show_order" name="show_order" ></input>
					        </div>
					        <br>
					        <div>
					            <label for="function_desc">资源描述:</label>
					            <textarea  id="function_form_function_desc"  name="function_desc" style="height:60px;"></textarea>
					        </div>
					    </form>

					</div>
					<div region="south" border="false" style="text-align:right;height:30px;line-height:30px;">
						<a class="easyui-linkbutton" icon="icon-ok" href="javascript:void(0)" id="function_ok">Ok</a>
						<a class="easyui-linkbutton" icon="icon-cancel" href="javascript:void(0)" id="function_cancel">Cancel</a>
					</div>
				</div>
		</div>
	</div>
	
	
	<script type="text/javascript">
		$(document).ready(function(){
				FunctionManager.init();
		});
	</script>
  </body>

